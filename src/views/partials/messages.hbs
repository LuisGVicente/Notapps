{{!-- Si hay una línea de código que llame a la variable global success_msg(como por ej: req.flash('success_msg','Note added succesfully');), pinta este código: --}}
{{#if success_msg}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
  {{success_msg}}
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}